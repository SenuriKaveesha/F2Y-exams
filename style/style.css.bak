* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: "Inter", sans-serif;
  line-height: 1;
  font-weight: 400;
  color: #555;
}

.container {
  width: 1200px;
  padding: 0 32px;
  margin: 0 auto;
}

/* *********************************** */
/* header */
/* *********************************** */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fdf2e9;

  height: 96px;
  padding: 0 48px;
}

.logo {
  height: 75px;
}

/* *********************************** */
/* header */
/* *********************************** */

.menu {
  list-style-type: none;
  margin: 0;
  padding: 0;
  overflow: hidden;
  background-color: #333;
}

.menu li {
  float: left;
}

.menu li a {
  display: block;
  color: white;
  text-align: center;
  padding: 15px 14px 12px 10px;
  text-decoration: none;
}

.menu li a:hover {
  background-color: pink;
}

.grid {
  display: grid;
  gap: 96px;
}
.grid--2-cols {
  grid-template-columns: repeat(2, 1fr);
}

.grid--3-cols {
  grid-template-columns: repeat(3, 1fr);
}
/* *********************************** */
/* About Us */
/* *********************************** */
.text-block {
  bottom: 20px;
  right: 20px;
  border: 2px;
  border-color: black;
  background-color: white;
  color: black;
  padding-left: 20px;
  padding-right: 20px;
}
/* *********************************** */
/* footer */
/* *********************************** */
.footer {
  margin-top: 96px;
  background-color: #fdf2e9;
  background-image: url("../img/footer.jpg");
  background-position: center center;
  background-repeat: no-repeat;
  background-size: cover;
  padding: 32px 0 32px 0;
}


.fotter-nav {
  list-style: none;
  display: flex;
  flex-direction: column;
  gap: 1.6rem;
  margin-top: 24px;
  margin-bottom: 24px;
}

.footer-list {
  display: flex;
  gap: 12px;
}

.footer-link:link,
.footer-link:visited {
  text-decoration: none;
  font-size: 16px;
  color: #767676;
  transition: all 0.3s;
}

.footer-link:hover,
.footer-link:active {
  color: #848484;
}

.logo1 {
  margin-bottom: 3.2rem;
  margin-top: 3.2rem;
}
